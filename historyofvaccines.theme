	function historyofvaccines_theme_suggestions_alter(array &$suggestions, array &$variables, $hook) {
		
		$node = Drupal::routeMatch()->getParameter('node');
        if ($node) {
            $body = "The History of Vaccines explores the role of immunization in the human experience and examines its continuing contributions to public health.";
			if($node->body->value) {
				$body = strip_tags($node->body->value);
			}
            $variables['meta_description'] = $body;

            $url = "https:///www.historyofvaccines.org" . $_SERVER['REQUEST_URI'];
			$title = "The History of Vaccines";
			if($node->title[0]->value) {
				$title = $node->title[0]->value;
			}
			
