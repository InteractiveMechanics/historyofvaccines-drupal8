	function historyofvaccines_preprocess_search_result(&$variables) {
		
		$node = $variables['result']['node'];
		
		if($node->field_uid) {
			
			$uid = $node->field_uid->getValue()[0]['value'];
			$link = "https://www.historyofvaccines.org/timeline#EVT_" . $uid;
			$variables['url'] = $link;
			
		}
		
	}
