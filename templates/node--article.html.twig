		                                    {% set thumb_file = '0000' ~ thumb_file %}
		                            
		                                {% elseif thumb_file|length == 3 %}
		                                    {% set thumb_file = '000' ~ thumb_file %}
		                            
		                                {% elseif thumb_file|length == 4 %}
		                                    {% set thumb_file = '00' ~ thumb_file %}
		                            
